{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./es2020",
    "removeComments": true,
    "noEmitOnError": true,

    "module": "CommonJS",
    "target": "ESNext",
    "types": [],
    "lib": ["ESNext", "DOM"],
    "allowJs": true,

    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": false,
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleDetection": "force",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts"
  ]
}
